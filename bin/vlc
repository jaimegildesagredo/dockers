#!/bin/bash

docker run \
    -e DISPLAY=$DISPLAY \
    -e QT_X11_NO_MITSHM=1 \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v /dev/shm:/dev/shm \
    -v /dev/dri:/dev/dri \
    -v /run/user/${UID}/pulse:/run/user/${UID}/pulse \
    -v /etc/machine-id:/etc/machine-id \
    -v /data/jaimegildesagredo:/data \
    vlc \
    dbus-launch vlc --no-qt-privacy-ask
